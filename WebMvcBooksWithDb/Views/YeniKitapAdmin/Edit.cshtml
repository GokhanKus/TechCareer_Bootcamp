@model WebMvcBooksWithDb.ViewModelsForBook.YeniKitapViewModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Kitap Düzenle</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit" enctype="multipart/form-data">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="KitapAdi" class="control-label"></label>
				<input asp-for="KitapAdi" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Fiyat" class="control-label"></label>
				<input asp-for="Fiyat" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="YayinlanmaTarihi" class="control-label"></label>
				<input asp-for="YayinlanmaTarihi" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="SayfaSayisi" class="control-label"></label>
				<input asp-for="SayfaSayisi" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="KitapResimFile" class="control-label"></label>
				<div class="custom-file">
					<input asp-for="KitapResimFile" class="custom-file-input" />
					<label class="custom-file-label" for="customFile">Choose file</label>
				</div>
				<div class="card" style="width: 10rem;">
					<img src="~/Uploads/@Model.KitapResmiUrl" class="card-img-top" width="80" asp-append-version="true">
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Güncelle" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

