@model IEnumerable<WebMvcBooksWithDb.Models.YeniKitap>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Yeni Kitap Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KitapAdi)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KitapResmi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YayinlanmaTarihi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KitapAdi)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                    <div class="card" style="width: 10rem;">
                        <img src="~/Uploads/@item.KitapResmi" width="120" class="card-img-top" alt="@item.KitapAdi">
                    </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YayinlanmaTarihi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
